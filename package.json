{
  "name": "templator-evgdudareff",
  "version": "1.0.4",
  "description": "A template engine for parsing HTML templates with dynamic syntax support. Supports variable interpolation, conditionals, loops, and event handlers.",
  "type": "module",
  "source": "src/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "parcel serve demo/index.html",
    "build": "parcel build src/index.ts --dist-dir dist",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "check": "npm run lint && npm run format",
    "prepublishOnly": "npm run build && npm run check && npm test"
  },
  "keywords": [
    "template",
    "engine",
    "html",
    "parser",
    "compiler",
    "templating",
    "variables",
    "conditionals",
    "loops",
    "event-handlers"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "e.dudarev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evgdudareff/templator.git"
  },
  "bugs": {
    "url": "https://github.com/evgdudareff/templator/issues"
  },
  "homepage": "https://github.com/evgdudareff/templator#readme",
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.32.0",
    "@parcel/packager-ts": "^2.15.4",
    "@parcel/transformer-typescript-types": "^2.15.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "babel-jest": "^30.1.1",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jiti": "^2.5.1",
    "parcel": "^2.15.4",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.38.0"
  }
}
